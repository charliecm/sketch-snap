{
  "name": "Sketch Snap",
  "description": "A Sketch plugin that lets you snap layers below, above, left of or right of selected layer to one of its edges.",
  "author": "Charlie Chao",
  "homepage": "https://github.com/charliecm/sketch-snap",
  "identifier": "com.charliechao.sketch-snap",
  "icon": "icon.png",
  "compatibleVersion": 3,
  "bundleVersion": 1,
  "commands": [
    {
      "name": "Snap Layers to Top Edge",
      "identifier": "sketch-snap.snap-top",
      "script": "./snap.js",
      "handlers": {
        "run": "snapToTop"
      }
    },
    {
      "name": "Snap Layers to Bottom Edge",
      "identifier": "sketch-snap.snap-bottom",
      "script": "./snap.js",
      "handlers": {
        "run": "snapToBottom"
      }
    },
    {
      "name": "Snap Layers to Left Edge",
      "identifier": "sketch-snap.snap-left",
      "script": "./snap.js",
      "handlers": {
        "run": "snapToLeft"
      }
    },
    {
      "name": "Snap Layers to Right Edge",
      "identifier": "sketch-snap.snap-right",
      "script": "./snap.js",
      "handlers": {
        "run": "snapToRight"
      }
    },
    {
      "name": "Select Layers Above",
      "identifier": "sketch-snap.select-above",
      "script": "./select.js",
      "handlers": {
        "run": "selectAbove"
      }
    },
    {
      "name": "Select Layers Below",
      "identifier": "sketch-snap.select-below",
      "script": "./select.js",
      "handlers": {
        "run": "selectBelow"
      }
    },
    {
      "name": "Select Layers On Left",
      "identifier": "sketch-snap.select-left",
      "script": "./select.js",
      "handlers": {
        "run": "selectLeft"
      }
    },
    {
      "name": "Select Layers On Right",
      "identifier": "sketch-snap.select-right",
      "script": "./select.js",
      "handlers": {
        "run": "selectRight"
      }
    },
    {
      "name": "Settingsâ€¦",
      "identifier": "sketch-snap.settings",
      "script": "./settings.js",
      "handlers": {
        "run": "onRun",
        "actions": {
          "Shutdown": "onShutdown"
        }
      }
    }
  ],
  "menu": {
    "title": "Snap",
    "items": [
      "sketch-snap.snap-top",
      "sketch-snap.snap-bottom",
      "sketch-snap.snap-left",
      "sketch-snap.snap-right",
      "-",
      "sketch-snap.select-above",
      "sketch-snap.select-below",
      "sketch-snap.select-left",
      "sketch-snap.select-right",
      "-",
      "sketch-snap.settings"
    ]
  }
}